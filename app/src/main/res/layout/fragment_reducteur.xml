                    <RadioGroup
                        android:id="@+id/radioGroup_type_inspection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton_type_huile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Huile" />

                        <RadioButton
                            android:id="@+id/radioButton_type_graisse"
                            android:layout_width="wrap_content"
