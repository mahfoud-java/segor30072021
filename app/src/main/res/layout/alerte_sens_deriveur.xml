<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_card_alert"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="36dp"
    android:paddingRight="12dp"
    android:paddingBottom="36dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:padding="15dp"
            android:text="DÃ©finir le sens de l'ANTI DERIVEUR"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup_horaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton_horaire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:button="@drawable/ic_baseline_rotate_right_24"
                    android:text="horaire"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioButton_antihoraire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:button="@drawable/ic_baseline_rotate_left_24"
                    android:text="anti horaire"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_ajouter_sens_deriveur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:text="Ajouter" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>